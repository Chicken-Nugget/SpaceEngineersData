<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <chickennugget.spaceengineersdata.material.widgets.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Sheet"
        app:v_styleId="@array/text_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:weightSum="1.0">

        <chickennugget.spaceengineersdata.material.widgets.Button
            android:id="@+id/sheet_bt_match"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="0.4"
            android:background="@null"
            android:text="MATCH_PARENT"
            app:v_styleId="@array/button_raise"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.1"/>

        <chickennugget.spaceengineersdata.material.widgets.Button
            android:id="@+id/sheet_bt_wrap"
            android:layout_width="0dp"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="0.4"
            android:background="@null"
            android:text="WRAP_CONTENT"
            app:v_styleId="@array/button_raise"/>

    </LinearLayout>

</LinearLayout>