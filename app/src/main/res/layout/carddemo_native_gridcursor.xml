<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Card visible layout -->
    <chickennugget.spaceengineersdata.cards.ForegroundLinearLayout
        android:id="@+id/card_main_layout"
        style="@style/card.native.main_layout_foreground"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <chickennugget.spaceengineersdata.cards.CardThumbnailView
            style="@style/card.native.card_thumbnail_outer_layout"
            android:id="@+id/card_thumbnail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <chickennugget.spaceengineersdata.cards.CardHeaderView
            android:id="@+id/card_header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Main Content View -->
        <FrameLayout
            android:id="@+id/card_main_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </chickennugget.spaceengineersdata.cards.ForegroundLinearLayout>



</LinearLayout>