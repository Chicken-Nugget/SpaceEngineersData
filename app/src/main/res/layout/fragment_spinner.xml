<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <chickennugget.spaceengineersdata.material.widget.Spinner
            android:id="@+id/spinner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="128dp"
            android:padding="8dp"
            app:spn_label="Spinner with arrow"
            app:v_styleId="@array/spinner"/>

        <chickennugget.spaceengineersdata.material.widget.Spinner
            android:id="@+id/spinner_no_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:minWidth="128dp"
            android:padding="8dp"
            app:spn_label="Spinner without arrow"
            app:v_styleId="@array/spinner_no_arrow"/>


    </LinearLayout>


</ScrollView>

