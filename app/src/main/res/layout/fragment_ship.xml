<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:weightSum="1.0">

            <chickennugget.spaceengineersdata.material.widgets.Button
                android:id="@+id/b_gyroscope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/se_gyro"
                android:drawablePadding="25dp"
                android:gravity="center_vertical"
                android:text="Gyroscope"
                app:v_styleId="@array/button_raise_wave_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:weightSum="1.0">

            <chickennugget.spaceengineersdata.material.widgets.Button
                android:id="@+id/b_landing_gear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/se_landing_gear"
                android:drawablePadding="25dp"
                android:gravity="center_vertical"
                android:text="Landing Gear"
                app:v_styleId="@array/button_raise_wave_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:weightSum="1.0">

            <chickennugget.spaceengineersdata.material.widgets.Button
                android:id="@+id/b_artificial_mass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/se_artificialmass"
                android:drawablePadding="25dp"
                android:gravity="center_vertical"
                android:text="Artificial Mass"
                app:v_styleId="@array/button_raise_wave_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:weightSum="1.0">

            <chickennugget.spaceengineersdata.material.widgets.Button
                android:id="@+id/b_jump_drive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/se_jumpdrive"
                android:drawablePadding="25dp"
                android:gravity="center_vertical"
                android:text="Jump Drive"
                app:v_styleId="@array/button_raise_wave_color"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>



